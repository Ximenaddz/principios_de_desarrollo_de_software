    private void botonguardarsaActionPerformed(java.awt.event.ActionEvent evt) {                                               
      
    String text = saldito2.getText();  // cargar el valor del nuevo saldo desde el text box
    int saldoantiguo = Integer.parseInt(Saldito.getText()); // capturar el valor del saldo antiguo desde la ventana pricipal
    int SaldoSuma = Saldito + Integer.parseInt(text); // sumar los dos valores
    Saldito.setText(String.valueOf(SaldoSuma)); // mostrar el nuevo valor en la ventana principal
   
    }                                              
      

    }
